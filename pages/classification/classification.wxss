.body{
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.showpage{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  height: 100%
}
.ads{
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.choose-view{
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  flex-wrap: wrap; 
}
.choose{
  display: flex;
  flex-direction: column;
  height: 250rpx;
  width: 33.3%;
  justify-content: center;
}
.choose-icon{
  margin: auto;
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
}
.choose-text{
  line-height: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  font-weight: 400;
}
