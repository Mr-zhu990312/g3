<view class="page">
  <view class='page__hd page__hd_shadow-light'>
    <van-search placeholder='请输入搜索关键字' />
  </view>
  <view class='page__bd'>
    <swiper indicator-dots='true' autoplay='true'>
      <swiper-item wx:for='{{ swiperImages }}'>
        <image class='swiper-item__image-size-inherit' src="{{ item }}" mode="aspectFill"></image>
      </swiper-item>
    </swiper>
    <view class="menu menu_shadow-light">
      <navigator wx:for='{{ menuItems }}' class="menu__item menu__item_size-m" hover-class="menu__item_active">
        <view class="menu__icon">
          <i class="material-icons md-24 md-dark" style="color: {{ item.color ? item.color : '' }}">{{ item.icon }}</i>
        </view>
        <view class='menu__text menu__text_size-m'>{{ item.text }}</view>
      </navigator>
    </view>
    <view class="commodity-wrapper commodity-wrapper_theme-primary">
      <navigator class="commodity commodity_theme-primary" url='/pages/commodity/commodity' wx:for='{{ commodityList }}'>
        <image src='{{ item.cover }}' mode='scaleToFill' class="commodity__cover commodity__cover_size-m"></image>
        <view class="commodity__info">
          <view class="commodity__name">{{ item.name }}</view>
          <view class="commodity__price">{{ item.price }}</view>
        </view>
      </navigator>
    </view>
  </view>
</view>