swiper {
  width: 750rpx;
  height: 421rpx;
}

.swiper-item__image-size-inherit {
  width: 100%;
  height: 100%;
}

.menu {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px 16px;
}

.menu__item {
  transition: .1s ease;
}

.menu__item_size-m {
  padding: 6rpx 36rpx;
}

.menu__text_size-m {
  font-size: 9pt;
  color: rgba(0,0,0,.5);
  text-align: center;
}

.commodity-wrapper_theme-primary {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px 16px;
  background: #efefef;
}

.commodity_theme-primary {
  color: rgba(0,0,0,.6);
  background: #fff;
  font-size: 10pt;
  display: flex;
  flex-direction: column;
  border-radius: 18rpx;
  box-shadow: 6rpx 6rpx 32rpx #ececec;
  margin: 12rpx;
  flex: 1 1 40%;
  padding: 20rpx;
}

.commodity__cover_size-m {
  width: 100%;
  height: 280rpx;
}

.commodity__name {
  font-size: 10pt;
  height: 20pt;
  text-overflow: ellipsis;
}

.commodity__price::before {
  content: 'ï¿¥';
}

.commodity__price {
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-size: 12pt;
  color: orange;
  text-align: right;
}

.menu__item_active {
  opacity: .5;
}